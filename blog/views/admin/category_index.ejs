<%- include("layout_header.ejs",{title:"express"})  %>
    
    <!-- <h1>用户列表</h1> -->
	<ol class = "breadcrumb">
            <li><a href="/">管理首页</a></li>
            <li><span>分类列表</span></li>
        </ol>
        <h3>分类列表</h3>
        <table class="table table-striped table-hover">
              <!-- tr>th*4 + tab键 -->
              <tr>
                  <th>ID</th>
                  <th>分类</th>
                  <th>操作</th>
              </tr>
              <!-- 通过模板的循环语法进行数据输出 -->
              <% categories.forEach(function(category){ %>
                  <tr>
                      <td><%= category._id.toString() %></td>
                      <td><%= category.name %></td>
                      <td>
                          <a href="/admin/category/edit?id=<%= category._id.toString() %>">修改</a>
                          <a href="/admin/category/delete?id=<%= category._id.toString() %>">删除</a>
                      </td>
                  </tr>
              <% }) %>
        </table>
        <nav aria-label="...">
          <ul class="pager">
              <% if (page == 1 ){%>
              <li class="previous disabled"><a href="/admin/category?page=<%= page-1 %>"><span aria-hidden="true">&larr;</span> 上一页</a></li>
              <% }else{ %>
              <li class="previous"><a href="/admin/category?page=<%= page-1 %>"><span aria-hidden="true">&larr;</span> 上一页</a></li>
              <% } %>
            
            <% if (page == pages){ %>
              <li class="next disabled"><a href="/admin/category?page=<%= page+1 %>">下一页 <span aria-hidden="true">&rarr;</span></a></li>
              <% }else{ %>
              <li class="next"><a href="/admin/category?page=<%= page+1 %>">下一页 <span aria-hidden="true">&rarr;</span></a></li>
              <% } %>
            
          </ul>
        </nav>
<% include layout_footer.ejs %>
