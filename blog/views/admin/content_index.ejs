<%- include("layout_header.ejs",{title:"express"})  %>


	<!-- <h1>用户列表</h1> -->
	<ol class = "breadcrumb">
            <li><a href="/">管理首页</a></li>
            <li><span>内容列表</span></li>
        </ol>
        <h3>内容列表</h3>
        <table class="table table-striped table-hover">
              <!-- tr>th*4 + tab键 -->
              <tr>
                  <th>ID</th>
                  <th>分类名称</th>
                  <th>标题</th>
                  <th>作者</th>
                  <th>添加时间</th>
                  <th>阅读量</th>
                  <th>操作</th>
              </tr>
              <!-- 通过模板的循环语法进行数据输出 -->
              <%  contents.forEach(function(content){ %>
                  <tr>
                      <td><%= content._id.toString()%></td>
                      <td><%= content.category.name %></td>
                      <td><%= content.title%></td>
                      <td><%= content.user.username%></td>
                      <td><%= content.addTime %></td>
                      <td><%= content.views%></td>
                      <td>
                          <a href="/admin/content/edit?id=<%=content._id.toString()%>">修改</a>
                          <a href="/admin/content/delete?id=<%= content._id.toString()%>">删除</a>
                      </td>
                  </tr>
              <% }) %>
        </table>
        <nav aria-label="...">
          <ul class="pager">
              <% if (page == 1){ %>
              <li class="previous disabled"><a href="/admin/content?page=<%= page-1 %>"><span aria-hidden="true">&larr;</span> 上一页</a></li>
              <% }else{ %>
              <li class="previous"><a href="/admin/content?page=<%= page-1%>"><span aria-hidden="true">&larr;</span> 上一页</a></li>
              <% } %>
            
            <% if (page == pages){  %>
              <li class="next disabled"><a href="/admin/content?page=<%= page+1%>">下一页 <span aria-hidden="true">&rarr;</span></a></li>
              <% }else{ %>
              <li class="next"><a href="/admin/content?page=<%= page+1%>">下一页 <span aria-hidden="true">&rarr;</span></a></li>
              <% } %>
            
          </ul>
        </nav>











<% include layout_footer.ejs %>
