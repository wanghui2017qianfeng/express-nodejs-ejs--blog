<%- include("layout_header.ejs",{title:"express"})  %>
    
    <!-- <h1>用户列表</h1> -->
	<ol class = "breadcrumb">
            <li><a href="/">管理首页</a></li>
            <li><span>用户列表</span></li>
        </ol>
        <h3>用户列表</h3>
        <table class="table table-striped table-hover">
              <tr>
                  <th>ID</th>
                  <th>用户名</th>
                  <th>密码</th>
                  <th>是否是管理员</th>
              </tr>
     

              <!-- 通过模板的循环语法进行数据输出 -->
              <%  users.forEach(function(user){ %>
                
                  <tr>
                      <td><%= user._id %></td>
                      <td><%= user.username %></td>
                      <td><%= user.password %></td>
                      <td>
                          <% if(user.isAdmin){ %>
                          是
                          <% }else{ %>
                            否
                          <%}%>
                      </td>
                  </tr>
              <% }) %>
        </table>
        <nav aria-label="...">
          <ul class="pager">
              <% if (page == 1){ %>
              <li class="previous disabled"><a href="/admin/user?page=<%= page-1 %>"><span aria-hidden="true">&larr;</span> 上一页</a></li>
              <% }else{ %>
              <li class="previous"><a href="/admin/user?page=<%= page-1 %>"><span aria-hidden="true">&larr;</span> 上一页</a></li>
              <% } %>
            
            <% if (page == pages){  %>
              <li class="next disabled"><a href="/admin/user?page=<%= page+1 %>">下一页 <span aria-hidden="true">&rarr;</span></a></li>
              <% }else{ %>
              <li class="next"><a href="/admin/user?page=<%= page+1 %>">下一页 <span aria-hidden="true">&rarr;</span></a></li>
              <% } %>
          </ul>
        </nav>

<%- include layout_footer.ejs %>
