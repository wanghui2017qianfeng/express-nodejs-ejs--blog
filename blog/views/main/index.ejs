<%- include("main_header.ejs",{categories:categories,category:category}) %>




<% contents.forEach(function(content){ %>
<div class="listBox">
    <h1><%= content.title %></h1>
    <p class="colDefault">
        作者：<span class="colInfo"><%= content.user.username %></span> - 
      
        阅读：<span class="colInfo"><%= content.view %></span> - 
        评论：<span class="colInfo">10</span>
    </p>
    <dfn><p><%= content.description %></p></dfn>
    <div class="function"><a href="/view/?contentid=<%= content.id %>">阅读全文</a></div>
</div>
<% }) %>
<div class="pager">
    <ul class="clear">
        
        <li class="previous">
        
            <% if (page <= 1 ){%>
            <a href="javascript:;">没有上一页了</a>
            <% }else{ %>
             <a href="?page=<%= page-1 %>&categoryid=<%= category %>">上一页</a>
            <% } %>
        
        </li>

        <li>
            <% if(pages == 0){ %>
            <strong>没有内容</strong>
            <% }else{ %>
            <strong><%= page %> / <%= pages %></strong>
            <% } %>
        </li>

        <li class="next">
        
            <% if (page >= pages){ %>
            <a href="javascript:;">没有下一页了</a>
            <% }else{ %>
             <a href="?page=<%= page+1 %>&categoryid=<%= category %>">下一页</a>
            <% } %>
        
        </li>
        
    </ul>
</div>


<%- include("main_footer.ejs",{userInfo:userInfo}) %>